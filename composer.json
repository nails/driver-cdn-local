{
    "name": "nails/driver-cdn-local",
    "keywords": ["Nails", "Shed Collective", "CodeIgniter", "CDN Module", "Driver"],
    "homepage": "http://nailsapp.co.uk/modules/cdn/driver/awslocal",
    "description": "This is the \"Local\" driver for the Nails CDN module.",
    "license": "MIT",
    "authors":
    [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support":
    {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev":
    {
        "phpunit/phpunit": "9.*"
    },
    "extra":
    {
        "nails" :
        {
            "name": "Local",
            "type": "driver",
            "subType": "storage",
            "forModule": "nails/module-cdn",
            "data": {
                "namespace": "Nails\\Cdn\\Driver\\",
                "class": "Local",
                "settings": [
                        {
                            "key": "path",
                            "label": "Path",
                            "info": "Where to store uploaded files; absolute path to relative to index.php",
                            "default": "assets/uploads"
                        },
                        {
                            "legend": "URLs",
                            "fields": [
                                {
                                    "key": "uri_serve",
                                    "label": "Serving URI",
                                    "default": "cdn",
                                    "info": "Value will be passed into <code>siteUrl($value)</code>"
                                },
                                {
                                    "key": "uri_serve_secure",
                                    "label": "Serving URI (Secure)",
                                    "default": "cdn",
                                    "info": "Value will be passed into <code>siteUrl($value, true)</code>"
                                },
                                {
                                    "key": "uri_process",
                                    "label": "Processing URI",
                                    "default": "cdn",
                                    "info": "Value will be passed into <code>siteUrl($value)</code>"
                                },
                                {
                                    "key": "uri_process_secure",
                                    "label": "Processing URI (Secure)",
                                    "default": "cdn",
                                    "info": "Value will be passed into <code>siteUrl($value, true)</code>"
                                }
                            ]
                        }
                    ]
            },
            "scripts": {
                "install": "./scripts/setup.sh"
            }
        }
    },
    "autoload":
    {
        "psr-4": {"Nails\\Cdn\\Driver\\": "src/"}
    }
}
